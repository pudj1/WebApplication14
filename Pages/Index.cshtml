@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Instruments</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var instrument in Model.Instruments)
        {
            <tr>
                <td>@instrument.Id</td>
                <td>@instrument.Name</td>
            </tr>
        }
    </tbody>
</table>